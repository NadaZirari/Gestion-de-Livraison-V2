<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="v2-1" author="nada">
        <comment>Add Customer and DeliveryHistory tables for V2</comment>
        
        <!-- Customer Table -->
        <createTable tableName="customer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DECIMAL(10, 8)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DECIMAL(11, 8)">
                <constraints nullable="false"/>
            </column>
            <column name="preferred_time_slot" type="VARCHAR(20)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add customer_id to delivery table -->
        <addColumn tableName="delivery">
            <column name="customer_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_delivery_customer" 
                           referencedTableName="customer" referencedColumnNames="id"/>
            </column>
        </addColumn>

        <!-- DeliveryHistory Table -->
        <createTable tableName="delivery_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_delivery_history_customer" 
                           referencedTableName="customer" referencedColumnNames="id"/>
            </column>
            <column name="delivery_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_delivery_history_delivery" 
                           referencedTableName="delivery" referencedColumnNames="id"/>
            </column>
            <column name="tour_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_delivery_history_tour" 
                           referencedTableName="tour" referencedColumnNames="id"/>
            </column>
            <column name="delivery_date" type="DATE" nullable="false"/>
            <column name="planned_time" type="TIME" nullable="false"/>
            <column name="actual_time" type="TIME"/>
            <column name="delay_minutes" type="INTEGER"/>
            <column name="day_of_week" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Create indexes for better query performance -->
        <createIndex indexName="idx_delivery_customer" tableName="delivery">
            <column name="customer_id"/>
        </createIndex>
        
        <createIndex indexName="idx_delivery_history_customer" tableName="delivery_history">
            <column name="customer_id"/>
        </createIndex>
        
        <createIndex indexName="idx_delivery_history_date" tableName="delivery_history">
            <column name="delivery_date"/>
        </createIndex>
        
        <createIndex indexName="idx_delivery_history_day" tableName="delivery_history">
            <column name="day_of_week"/>
        </createIndex>
    </changeSet>
    
    <changeSet id="v2-2" author="nada">
        <comment>Add rollback script for V2 changes</comment>
        <rollback>
            <dropTable tableName="delivery_history"/>
            <dropColumn tableName="delivery" columnName="customer_id"/>
            <dropTable tableName="customer"/>
        </rollback>
    </changeSet>
    
</databaseChangeLog>
